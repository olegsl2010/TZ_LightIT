<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    >

    <ImageView
        android:id="@+id/postImageProduct"
        android:layout_width="@dimen/list_item_avatar_size_width"
        android:layout_height="@dimen/list_item_avatar_size_height"
        android:layout_marginRight="3dp"/>

    <TextView
        android:id="@+id/postTitleProduct"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/postImageProduct"
        android:layout_toRightOf="@id/postImageProduct"
        android:maxLines="2"
        android:textIsSelectable="false"
        android:textSize="@dimen/text_size_product"
        android:ellipsize="end"/>


</RelativeLayout>
